<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:background="@color/grey"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtView_title_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="20sp">
        </TextView>

        <View
            android:id="@+id/title_score_padding"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/grey"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtView_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/right"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:paddingEnd="6dp"
            android:paddingStart="10dp"
            android:paddingBottom="10dp">
        </TextView>

        <TextView
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:id="@+id/txtView_score_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:background="@color/grey"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtView_wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:text="@string/wrong"
            android:textSize="15sp" >
        </TextView>

        <TextView
            android:textAlignment="textEnd"
            android:id="@+id/txtView_score_wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="10dp" >
        </TextView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/buttonPadding"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonPadding">

            <View
                android:id="@+id/imagePadding2"
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/dialog_restart_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ic_restart"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>
